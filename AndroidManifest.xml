<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
          package="com.klinker.android.talon"
          android:versionCode="12"
          android:versionName="0.80">

    <uses-sdk
            android:minSdkVersion="14"
            android:targetSdkVersion="19"/>

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true"/>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.VIBRATE"/>


    <application
            android:name=".utils.App"
            android:label="@string/app_name"
            android:icon="@drawable/ic_launcher"
            android:hardwareAccelerated="true" >

        <meta-data android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <provider
            android:name=".sq_lite.HomeContentProvider"
            android:multiprocess="true"
            android:authorities="com.klinker.android.talon.provider" />

        <activity android:name=".ui.MainActivity"
                  android:label="@string/app_name"
                  android:configChanges="orientation|screenSize"
                  android:windowSoftInputMode="adjustResize"
                  android:launchMode="singleTop"
                  android:theme="@style/Theme.TalonDark" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>

            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

            </intent-filter>
        </activity>

        <activity android:name=".ui.drawer_activities.RetweetActivity"
                  android:label="@string/retweets"
                  android:configChanges="orientation|screenSize"
                  android:windowSoftInputMode="adjustResize"
                  android:theme="@style/Theme.TalonDark"
                  android:excludeFromRecents="true">
        </activity>

        <activity android:name=".ui.drawer_activities.FavoritesActivity"
                  android:label="@string/favorite_tweets"
                  android:configChanges="orientation|screenSize"
                  android:windowSoftInputMode="adjustResize"
                  android:theme="@style/Theme.TalonDark"
                  android:excludeFromRecents="true">
        </activity>

        <activity android:name=".ui.drawer_activities.FavoriteUsersActivity"
            android:label="@string/favorite_users"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.TalonDark"
            android:excludeFromRecents="true">
        </activity>

        <activity android:name=".ui.drawer_activities.lists.ViewUsers"
            android:label="@string/favorite_users"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.TalonDark.Popup"
            android:excludeFromRecents="true">
        </activity>

        <activity android:name=".ui.drawer_activities.trends.TrendsPager"
            android:label="@string/local_trends"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.TalonDark"
            android:excludeFromRecents="true">
        </activity>

        <activity android:name=".ui.drawer_activities.lists.ListsActivity"
            android:label="@string/lists"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.TalonDark"
            android:excludeFromRecents="true">
        </activity>

        <activity android:name=".ui.drawer_activities.lists.ChoosenListActivity"
            android:label="@string/lists"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.TalonDark.Popup"
            android:excludeFromRecents="true">
        </activity>


        <activity android:name=".ui.drawer_activities.Search"
            android:label="@string/search"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.TalonDark"
            android:excludeFromRecents="true">

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>

        <activity android:name=".ui.drawer_activities.trends.SearchedTrendsActivity"
            android:label="@string/trends"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="adjustResize"
            android:launchMode="singleTop"
            android:theme="@style/Theme.TalonDark.Popup"
            android:excludeFromRecents="true">

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>

        <activity android:name=".ui.LoginActivity"
                  android:label="@string/app_name_full"
                  android:configChanges="orientation|screenSize"
                  android:excludeFromRecents="true"
                  android:theme="@style/Theme.TalonDark" >

            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data
                        android:host="roartotweet"
                        android:scheme="oauth"/>
            </intent-filter>
        </activity>

        <activity android:name=".ui.MainActivityPopup"
            android:label="@string/app_name"
            android:theme="@style/Theme.TalonDark.Popup"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:launchMode="singleInstance"
            android:exported="true"
            tools:ignore="ExportedActivity"
            android:clearTaskOnLaunch="true" >
        </activity>

        <activity android:name=".ui.ComposeActivity"
                  android:label="@string/app_name"
                  android:configChanges="orientation|screenSize"
                  android:windowSoftInputMode="adjustResize|stateAlwaysVisible"
                  android:excludeFromRecents="true"
                  android:theme="@style/Theme.TalonDark.Popup" >

            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="image/*" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain" />
            </intent-filter>

        </activity>

        <activity android:name=".ui.ComposeDMActivity"
                  android:label="@string/compose_activity"
                  android:configChanges="orientation|screenSize"
                  android:windowSoftInputMode="adjustResize|stateAlwaysVisible"
                  android:excludeFromRecents="true"
                  android:theme="@style/Theme.TalonDark.Popup">
        </activity>

        <activity android:name=".ui.TweetActivity"
                  android:label="@string/app_name"
                  android:configChanges="orientation|screenSize"
                  android:windowSoftInputMode="adjustResize|stateAlwaysHidden"
                  android:excludeFromRecents="true"
                  android:theme="@style/Theme.TalonDark.Popup">
        </activity>

        <activity android:name=".ui.TweetActivityWidget"
            android:label="@string/app_name"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="adjustResize|stateAlwaysHidden"
            android:excludeFromRecents="true"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.TalonDark.Popup">
        </activity>

        <activity android:name=".ui.UserProfileActivity"
                  android:label="@string/app_name"
                  android:configChanges="orientation|screenSize"
                  android:windowSoftInputMode="adjustResize|stateAlwaysHidden"
                  android:excludeFromRecents="true"
                  android:theme="@style/Theme.TalonDark.Popup">
        </activity>

        <activity android:name=".settings.SettingsPagerActivity"
            android:label="@string/talon_settings"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="adjustResize|stateAlwaysHidden"
            android:excludeFromRecents="true"
            android:launchMode="singleTop"
            android:theme="@style/Theme.TalonDark">
        </activity>

        <service android:name="com.klinker.android.talon.services.TimelineRefreshService">
        </service>

        <service android:name="com.klinker.android.talon.services.MentionsRefreshService">
        </service>

        <service android:name="com.klinker.android.talon.services.DirectMessageRefreshService">
        </service>

        <service android:name="com.klinker.android.talon.services.TrimDataService">
        </service>

        <receiver android:name=".services.BootService">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>

        <provider android:name=".manipulations.MySuggestionsProvider"
            android:authorities="com.klinker.android.MySuggestionsProvider" />

        <!-- Widget -->
        <receiver android:name=".widget.WidgetProvider" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <intent-filter>
                <action android:name="com.klinker.android.talon.UPDATE_WIDGET" />
            </intent-filter>

            <meta-data android:name="android.appwidget.provider"
                android:resource="@xml/card_widget" />
        </receiver>

        <activity android:name=".widget.WidgetProxyActivity"
            android:theme="@style/Theme.TalonDark"/>
        <service android:name=".widget.WidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />
        <service android:name=".widget.WidgetProvider$CardWidgetService2" />

        <!-- DashClock -->
        <service android:name=".widget.TalonDashClockExtension"
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name_full"
            android:permission="com.google.android.apps.dashclock.permission.READ_EXTENSION_DATA" >
            <intent-filter>
                <action android:name="com.google.android.apps.dashclock.Extension" />
            </intent-filter>
            <meta-data android:name="protocolVersion" android:value="2" />
            <meta-data android:name="worldReadable" android:value="true" />
            <meta-data android:name="description"
                android:value="@string/extension_description" />
        </service>

    </application>
</manifest>
